        }

        .nav-link-primary {
            background: var(--primary-color);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 0.375rem;
            text-decoration: none;
            font-weight: 500;
            transition: background-color 0.2s;
        }

        .nav-link-primary:hover {
            background-color: #1d4ed8;
        }

        .hero-section {
            padding: 4rem 0;
            position: relative;
            width: 100%;
        }

        .hero-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 4rem;
        }

        .hero-text {
            flex: 1;
        }

        .hero-image {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .hero-title {
            font-size: 2.5rem;
            font-weight: bold;
            color: #1a1920;
            margin-bottom: 1.5rem;
            line-height: 1.2;
        }

        .hero-subtitle {
            font-size: 1.1rem;
            color: #1a1920;
            margin-bottom: 2rem;
            line-height: 1.6;
        }

        .features-grid-container {
            width: 100%;
            overflow: hidden;
            background: #e9ebf5;
            padding: 4rem 0;
        }

        .features-grid {
            display: flex;
            gap: 2rem;
            padding: 0 2rem;
            overflow-x: auto;
            scroll-snap-type: x mandatory;
            scroll-behavior: smooth;
            -webkit-overflow-scrolling: touch;
            scrollbar-width: none; /* Pour Firefox */
            -ms-overflow-style: none; /* Pour Internet Explorer et Edge */
            margin: 0 auto;
            position: relative;
        }

        .features-grid::-webkit-scrollbar {
            display: none; /* Pour Chrome, Safari et Opera */
        }

        .feature-card {
            flex: 0 0 300px;
            scroll-snap-align: start;
            min-width: 300px;
            width: 300px;
            background: white;
            padding: 2rem;
            border-radius: 1rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            text-align: center;
            border: 1px solid rgba(0, 0, 0, 0.1);
        }

        .feature-icon {
            width: 48px;
            height: 48px;
            margin: 0 auto 1rem;
        }

        .feature-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: #1a1920;
        }

        .feature-description {
            color: #1a1920;
            line-height: 1.5;
        }

        .btn {
            display: inline-block;
            padding: 0.875rem 1.75rem;
            font-weight: 500;
            text-align: center;
            border-radius: 0.5rem;
            transition: all 0.2s;
            text-decoration: none;
        }

        .btn-primary {
            background-color: #4f46e5;
            color: white;
            border: none;
        }

        .btn-primary:hover {
            background-color: #4338ca;
            transform: translateY(-1px);
        }

        .btn-secondary {
            background-color: #e5e7eb;
            color: #1f2937;
            border: none;
        }

        .btn-secondary:hover {
            background-color: #d1d5db;
            transform: translateY(-1px);
        }

        .buttons-container {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
        }

        @media (max-width: 768px) {
            .hero-content {
                flex-direction: column;
                text-align: center;
            }

            .feature-card {
                flex: 0 0 80vw;
                min-width: 80vw;
                width: 80vw;
            }

            .buttons-container {
                justify-content: center;
            }
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const featuresGrid = document.querySelector('.features-grid');
            let scrollInterval;
            let isPaused = false;

            function startAutoScroll() {
                if (!isPaused) {
                    const cardWidth = document.querySelector('.feature-card').offsetWidth;
                    const currentScroll = featuresGrid.scrollLeft;
                    const nextPosition = currentScroll + cardWidth + 32; // 32 pour le gap
                    const maxScroll = featuresGrid.scrollWidth - featuresGrid.clientWidth;

                    if (currentScroll >= maxScroll) {
                        // Retour au début si on est à la fin
                        featuresGrid.scrollTo({
                            left: 0,
                            behavior: 'smooth'
                        });
                    } else {
                        featuresGrid.scrollTo({
                            left: nextPosition,
                            behavior: 'smooth'
                        });
                    }
                }
            }

            // Démarrer le défilement automatique
            scrollInterval = setInterval(startAutoScroll, 3000); // Défilement toutes les 3 secondes

            // Mettre en pause le défilement au survol
            featuresGrid.addEventListener('mouseenter', () => {
                isPaused = true;
            });

            // Reprendre le défilement quand la souris quitte
            featuresGrid.addEventListener('mouseleave', () => {
                isPaused = false;
            });

            // Mettre en pause lors du toucher sur mobile
            featuresGrid.addEventListener('touchstart', () => {
                isPaused = true;
            });

            // Reprendre après le toucher
            featuresGrid.addEventListener('touchend', () => {
                setTimeout(() => {
                    isPaused = false;
                }, 3000); // Attendre 3 secondes après le dernier toucher
            });
        });
    </script>
{% endblock %}

